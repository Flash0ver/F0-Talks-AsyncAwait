<UserControl
    x:Class="F0.Talks.AsyncAwait.WpfApp.Controls.ExceptionController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:F0.Talks.AsyncAwait.WpfApp.Controls"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel>
            <Button
                Content="Throw synchronously"
                Click="OnThrowSynchronously" />
            <Button
                Content="Throw asynchronously"
                Click="OnThrowAsynchronously" />
        </StackPanel>
    </Grid>
</UserControl>
