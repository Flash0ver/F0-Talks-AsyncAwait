<UserControl
    x:Class="F0.Talks.AsyncAwait.WpfApp.Controls.NuGetExplorer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:F0.Talks.AsyncAwait.WpfApp.Controls"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <StackPanel>
            <TextBox
                x:Name="PackageId"
                Text="Microsoft.Bcl.AsyncInterfaces" />
            <Button
                Content="Get Downloads"
                Click="OnGetDownloads" />
            <Button
                Content="Cancel"
                Click="OnCancel" />
            <TextBlock
                x:Name="TotalDownloads"
                Text="_" />
        </StackPanel>
    </Grid>
</UserControl>
