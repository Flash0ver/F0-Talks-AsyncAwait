<Window
    x:Class="F0.Talks.AsyncAwait.WpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:F0.Talks.AsyncAwait.WpfApp"
    xmlns:controls="clr-namespace:F0.Talks.AsyncAwait.WpfApp.Controls"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <TextBlock>Hello .NET Community Austria!</TextBlock>
            <controls:Clock />
            <Separator />
            <controls:NuGetExplorer />
            <Separator />
            <controls:ExceptionController />
            <Separator />
            <controls:ProgressController />
        </StackPanel>
    </Grid>
</Window>
